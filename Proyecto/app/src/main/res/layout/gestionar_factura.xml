<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvNombre"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="Nombre: "
            android:textColor="@android:color/white"/>

        <Spinner
            android:id="@+id/spinnerNombre"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:drawSelectorOnTop="true"
            >
        </Spinner>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvLineaPedido"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="Lineas de Pedido: "
            android:textColor="@android:color/white"/>

        <EditText
            android:id="@+id/etLineaPedido"
            android:layout_width="match_parent"
            android:layout_height="267dp"
            android:inputType="textMultiLine" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvIva"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="Iva: "
            android:textColor="@android:color/white"/>

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:drawSelectorOnTop="true"
            android:entries="@array/impuestos"
            android:prompt="@string/impuestos_prompt">
        </Spinner>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:text="%"
            android:textColor="@android:color/white"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvTotal"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="Total: "
            android:textColor="@android:color/white"/>

        <EditText
            android:id="@+id/etTotal"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:inputType="numberDecimal" />
    </LinearLayout>

    <Button
        android:id="@+id/btnActualizarFactura"
        android:layout_width="330dp"
        android:layout_height="50dp"
        android:text="ACEPTAR"
        android:textColor="@android:color/white"
        android:textAlignment="center"
        android:layout_gravity="center"/>

</LinearLayout>